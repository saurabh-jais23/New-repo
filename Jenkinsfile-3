pipeline {
  agent { label 'ubuntu' }

  stages {
    
stage('Install Dependencies') {
            steps {
                // Install Python, pip, and other required dependencies
                sh '''
                    sudo apt-get update
                    sudo apt-get install -y python3 python3-venv python3-pip
                '''
            }
        }

        stage('Install WinRM and Python Modules') {
            steps {
                // Install WinRM and required Python packages
                sh '''
                   
                    pip install --upgrade pip  # Upgrade pip
                    pip install pywinrm requests  # Install pywinrm and requests
                '''
            }
        }
    stage('Copy artifacts'){
steps {
copyRemoteArtifacts from: 'jenkins://dd403f71c16abd7869f7434a475aef36/Pipeline', includes: 'bin/Release/*.TapPackage', mapper: [$class: 'StripDirectoriesArtifactNameMapper', count: 2], selector: [$class: 'LastStableRemoteBuildSelector']
}
}
      stage('Ansible Playbook to copy TapPackages') {
      steps {
        sh 'ansible-playbook -i winhosts2.ini copy_to_win.yml'
      }
    }
  }
}
 
